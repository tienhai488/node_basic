<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/main.css" />
    <style>
      #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      #customers td,
      #customers th {
        border: 1px solid #ddd;
        padding: 8px;
      }

      #customers tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      #customers tr:hover {
        background-color: #ddd;
      }

      #customers th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #04aa6d;
        color: white;
      }
      .container {
        text-align: center;
      }
      .container-form {
        margin-top: 10px;
        margin-bottom: 15px;
      }
      .container-form label {
        width: 60px;
        display: inline-block;
      }
      .container button {
        cursor: pointer;
      }
      .form-btn {
        display: inline-block;
      }
    </style>
  </head>
  <body>
    <h1>Info Users</h1>

    <table id="customers">
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>

      <% for (let i =0; i < dataUsers.length; i++ ) { %>
      <tr>
        <td><%= dataUsers[i].id %></td>
        <td><%= dataUsers[i].name %></td>
        <td><%= dataUsers[i].email %></td>
        <td>
          <a href="/detail/user/<%= dataUsers[i].id %>" target="_blank"
            >Detail</a
          >
          <form
            class="form-btn"
            action="/edit-user/<%= dataUsers[i].id %>"
            method="get"
          >
            <button>Edit</button>
          </form>
          <form class="form-btn" action="/delete-user" method="post">
            <input
              type="text"
              name="userId"
              value="<%= dataUsers[i].id %>"
              hidden
            />
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% } %>
    </table>

    <div class="container">
      <form action="/create-new-user" method="POST">
        <h1>Creact new User</h1>
        <div class="container-form">
          <label for="">Name</label>
          <input type="text" name="name" />
        </div>
        <div class="container-form">
          <label for="">Email</label>
          <input type="email" name="email" />
        </div>
        <div class="container-form">
          <label for="">Phone</label>
          <input type="text" name="phone" />
        </div>
        <div class="container-form">
          <label for="">Address</label>
          <input type="text" name="address" />
        </div>
        <button type="submit">ADD</button>
      </form>
    </div>
  </body>
</html>
